number = input('Give me the number')

number = int (number)

if number > 0 and number < 36:
    print ('Give me the number')

if number == 0:
    color = "green"
elif number >= 1 and number <= 10:
    if number / 2 != 0:
        color = "black"
    else:
        color = "red"
elif number >= 11 and number <= 18:
    if number %2 !=0:
        color = "red"
    else:
        color = "black"